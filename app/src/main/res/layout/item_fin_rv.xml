<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/idLLFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idTVValorDesp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Valor Desp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/idTVTipoDesp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tipo Desp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/idTVFontDesp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fonte Desp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/idTVDespDescr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Descr Desp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/idTVdataDesp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data Desp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
