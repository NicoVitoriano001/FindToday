<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/valorDespTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Desp:" />

    <TextView
        android:id="@+id/tipoDespTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo Desp:" />

    <TextView
        android:id="@+id/fontDespTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Font Desp:" />

    <TextView
        android:id="@+id/despDescrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desp Descr:" />

    <TextView
        android:id="@+id/dataDespTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Desp:" />

</LinearLayout>
